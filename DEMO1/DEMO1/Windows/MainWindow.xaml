<Window x:Class="DEMO1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMO1"
        mc:Ignorable="d"
        Title="Шайтане" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Fill="Aqua"></Rectangle>
        
        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" Name="MainFrame"></Frame>
        <Image Source="/Resources/Logo.png" HorizontalAlignment="Left"></Image>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource Btn1}" Click="CollapseBtnCL" Content="Свернуть"></Button>
            <Button Style="{StaticResource Btn1}" Click="CloseBtnCL" Content="Закрыть"></Button>
        </StackPanel>
    </Grid>
</Window>
